# Phase 1: Local development. Phase 2: Replace with Aurora/Cognito/S3/CloudWatch config.

# Server
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_ORIGIN=http://localhost:4200

# Database (Phase 1: local PostgreSQL. Phase 2: Aurora Serverless endpoint)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=scholarvault
DB_LOGGING=false
# Set to true only if DB is empty and you want TypeORM to create tables (otherwise use schema.sql / Docker).
# DB_SYNCHRONIZE=false

# Auth (Phase 1: placeholder JWT. Phase 2: Cognito User Pool / JWT validation)
JWT_SECRET=phase1-placeholder-secret-change-in-phase2
JWT_EXPIRES_IN=24h
PLACEHOLDER_PASSWORD=password123

# File storage (Phase 1: local. Phase 2: S3 bucket)
UPLOAD_BASE_DIR=./uploads
# Phase 2: AWS_S3_BUCKET=scholarvault-uploads

# Logging (Phase 1: local files. Phase 2: CloudWatch)
AUDIT_LOG_DIR=./logs
# Phase 2: AWS_CLOUDWATCH_LOG_GROUP=/scholarvault/audit

